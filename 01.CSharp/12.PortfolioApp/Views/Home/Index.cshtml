@using _12.PortfolioApp.Dtos;
@model HomeDto;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4">Hoşgeldiniz</h2>
    <h1>Ben @Model.User.Name</h1>
    <p>
        @Model.User.ShortAboutMe...
        <a asp-controller="Home" asp-action="About">Devamı için tıklayın</a>
        </p>
</div>
<hr/>
<div class="text-center mt-4">
    <h1>Yetenekler</h1>
    <div class="row">
        @foreach (var item in Model.Abilities)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-1">
                <div class="card">
                    <div class="card-header">
                        <img src="@item.ImageUrl" style="width:100%; height:250px; object-fit:contain" />
                        <h1>@item.Name</h1>
                    </div>
                </div>
            </div>
        }
            
    </div>
</div>
<hr/>
<div class="text-center mt-4">
    <h1>Tecrübelerim</h1>
    <div class="row">
        @foreach (var item in Model.Experiences)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-1">
                <div class="card">
                    <div class="card-header">
                        <img src="https://cdn-icons-png.flaticon.com/512/2399/2399925.png" style="width:100%" />
                        <h1>@item.CompanyName</h1>
                    </div>
                    <div class="card-body">
                        <p>@item.StartingDate.ToString("dd.MM.yyyy") - @(item.LeavingDate == null ? "Halen Çalışıyor" : Convert.ToDateTime(item.LeavingDate).ToString("dd.MM.yyyy"))</p>
                        <p><strong>@item.Profession</strong></p>
                        <p>@item.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr/>
<div class="text-center mt-4">
    <h1>Sosyal Medya Hesapları</h1>
    <div>
        @foreach (var item in Model.SocialMedias)
        {
            <a href="@item.Link" target="_blank" style="font-size:50px; text-decoration:none" title="@item.Name">
                <i class="@item.Icon"></i>
            </a>
        }
    </div>
</div>
