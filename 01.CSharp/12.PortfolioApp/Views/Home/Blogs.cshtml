@model List<Blog>
@{
}

<div class="text-center">
    <h1>Bloglarım</h1>
</div>

<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 col-12 mt-1">
            <div class="card">
                <div class="card-header">
                    <img src="@item.CoverImageUrl" style="width:100%; height:250px; object-fit:contain" />
                </div>
                <div class="card-body">
                    <h1>@item.Title</h1>
                    <a asp-controller="Home" asp-action="BlogDetail" asp-route-id="@item.Id">Devamı...</a>
                </div>
            </div>
        </div>
    }

</div>
